<div class='links'></div>

<div class='overall-container'>
  <div class='recipe-container'>
  </div>
  <div class='row recipe-section'>
    <div class='col-xs-6 col-xs-offset-3 recipe-name'>
      <h1 class='text-center'><%= recipe.get('name') %></h1>
    </div>
  </div>

  <div class='row recipe-section'>
    <div class='col-xs-2 col-xs-offset-3'>
      <div id='info-section'></div>
      <div class='img-rounded'></div>
    </div>
    <div class='col-xs-4'>
      <div id='note-section'>About:</div>
    </div>
  </div>

  <div class='row recipe-section'>
    <div class='col-xs-6 col-xs-offset-3 items-section'>
      <div class='elements-header'>Ingredients List</div>
      <ul id='ingredients-list' class='annotatable'></ul>
    </div>
  </div>

  <div class='row recipe-section'>
    <div class='col-xs-6 col-xs-offset-3 items-section'>
      <div class='elements-header'>Steps</div>
      <ol id='steps-list' class='annotatable'></ol>
    </div>
  </div>
</div>

<div class='buttons'>
  <button id='edit-recipe' class='recipe-button'>Edit this Recipe</button>
  <button id='delete-recipe' class='recipe-button'>Delete Recipe</button>
  <a href='#/' class='recipe-button bottom-button'>Back</button></a>
</div>

<div id='annotation-section'></div>

<div id='annotation-show-section'></div>

