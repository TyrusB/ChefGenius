<!DOCTYPE html>
<html>
<head>
  <title>ChefGenius</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class='navbar navbar-default navbar-fixed-top navbar-inverse' role='navigation'>
  <div class="navbar-header">
    <a class="navbar-brand" href="#">Chef Genius</a>
  </div>

  <ul class='nav navbar-nav navbar-left'>
    <li class='dropdown'>
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Recipes
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#">Main Courses</a></li>
        <li><a href="#">Appetizers</a></li>
        <li><a href="#">Desserts</a></li>
        <li class="divider"></li>
        <li><a href="#">All Recipes</a></li>
        <li class="divider"></li>
        <li><a href="#">Add a Recipe</a></li>
      </ul>
    </li>
  </ul>

  <% if signed_in? %>
    <div class='nav navbar-nav navbar-left signout-button'>
      <p class='navbar-text signed-in-text'>
        Signed in As: <%= current_user.email %>
      </p>
    </div>

    <div class='nav navbar-nav navbar-left'>
      <%= button_to "Sign Out", destroy_user_session_path, class: "btn btn-default navbar-btn", method: :delete %>
    </div>
  <% end %>

  <ul class="nav navbar-nav navbar-right">
    <li><a href="<%= root_url %>">Home</a></li>
    <li><a href="#">About</a></li>
    <li><a href='#'>Contact</a></li>
  </ul>
</nav>

<!-- <p class='notice'><%= notice %></p>
<p class='alert'><%= alert %></p> -->

<div class='container'>
  <%= yield %>
</div>

</body>
</html>

